{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "comma-dangle": 0,
        "prefer-destructuring": 0,
        "no-console": 0,
        "indent": ["error", 4, {"SwitchCase": 1}],
        "semi": ["error", "never"],
        "react/jsx-indent": ["error", 4],
        "no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ]
    },
    "env": {
        "browser": true,
        "node": true,
        "jest": true,
        "es6": true
    }
}
